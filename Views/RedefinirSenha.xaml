<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LumeClient.Views.RedefinirSenha"
             Title="RedefinirSenha"
             BackgroundColor="Black">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Image Source="lume_preto.png" HeightRequest="80" HorizontalOptions="Center"/>

        <Label Text="Redefinir Senha" 
               FontSize="24" 
               TextColor="Yellow" 
               HorizontalOptions="Center"/>

        <Entry x:Name="novaSenhaEntry"
               Placeholder="Nova senha"
               IsPassword="True"
               PlaceholderColor="Gray"
               TextColor="White"
               BackgroundColor="#1C1C1C"/>

        <Entry x:Name="confirmarSenhaEntry"
               Placeholder="Confirmar nova senha"
               IsPassword="True"
               PlaceholderColor="Gray"
               TextColor="White"
               BackgroundColor="#1C1C1C"/>

        <Button Text="Continuar"
                BackgroundColor="Yellow"
                TextColor="Black"
                Clicked="OnContinuarClicked"/>

        <Button Text="Voltar"
                BackgroundColor="Transparent"
                TextColor="Yellow"
                Clicked="OnVoltarClicked"/>

    </VerticalStackLayout>
</ContentPage>