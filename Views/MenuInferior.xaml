<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LumeClient.Views.MenuInferior">
    
    <ContentView.Content>
        <Grid BackgroundColor="Black" Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="End">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Botão da esquerda (Engrenagem) -->
            <Button Text="Buscar imagem ou icone"
                    Grid.Column="0"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />

            <!-- Botão do centro (Botão circular com destaque) -->
            <Button Text="Buscar imagem ou icone"
                    Grid.Column="1"
                    BackgroundColor="Yellow"
                    TextColor="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="30"/>

            <!-- Botão da direita (Coração) -->
            <Button Text="Buscar imagem ou icone"
                    Grid.Column="2"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
        </Grid>
    </ContentView.Content>
</ContentView>