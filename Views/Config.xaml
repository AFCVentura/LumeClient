<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LumeClient.Views.Config"
             Title="Config"
             xmlns:shell="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
shell:Shell.NavBarIsVisible="False"
NavigationPage.HasNavigationBar="False"
NavigationPage.HasBackButton="False"
             BackgroundColor="White"
             ControlTemplate="{StaticResource PageWithHeaderFooter}">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <!-- Título da seção -->
        <StackLayout Grid.Row="0" BackgroundColor="Black" Padding="10" Margin="0">
            <Label 
                Text="Configurações"
                TextColor="{StaticResource Primary}"
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"/>
        </StackLayout>

        <!-- Corpo dos botões -->
        <VerticalStackLayout 
            Grid.Row="1"
            Spacing="18"
            Padding="25"
            VerticalOptions="Center">

            <Button Text="Alterar nome do usuário"
                    BackgroundColor="{StaticResource Primary}"
                    Clicked="OnAlterarNomeClicked"
                    TextColor="Black"
                    FontAttributes="Bold"/>

            <Button Text="Alterar senha"
                    Clicked="OnAlterarSenhaClicked"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="Black"
                    FontAttributes="Bold"/>

            <Button Text="Sair"
                    Clicked="OnSairClicked"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontAttributes="Bold"/>

            <Button Text="Excluir conta"
                Clicked="OnExcluirContaClicked"
                BackgroundColor="#FF6B6B"
                TextColor="Black"
                FontAttributes="Bold"/>

        </VerticalStackLayout>

        <!-- Botão Voltar -->

        <Button 
            Text="Voltar à Página Inicial"
            Margin="25,0,25,20"
            Grid.Row="2"
            Clicked="OnVoltarClicked"
            BackgroundColor="{StaticResource Primary}"
            TextColor="Black"
            FontAttributes="Bold" />

    </Grid>
</ContentPage>
