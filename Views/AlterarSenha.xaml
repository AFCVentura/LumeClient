<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LumeClient.Views.AlterarSenha"
             Title="AlterarSenha">

    <Grid RowDefinitions="Auto,*,Auto" BackgroundColor="White">
        <VerticalStackLayout Padding="20" Spacing="15">

            <StackLayout Grid.Row="0" Padding="15">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Start" Spacing="10">
                    <Image Source="lume_branco.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Alterar Senha"
                           FontSize="20"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="Black"/>
                </StackLayout>
            </StackLayout>

            <StackLayout Spacing="5">
                <Label Text="Senha Atual" TextColor="Black" FontSize="14"/>
                <Border Stroke="#FBD206" StrokeThickness="2" BackgroundColor="White" StrokeShape="RoundRectangle 8">
                    <Entry x:Name="txt_senha_atual"
                           Placeholder="Senha atual"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           HeightRequest="45"/>
                </Border>
            </StackLayout>

            <StackLayout Spacing="5">
                <Label Text="Nova Senha" TextColor="Black" FontSize="14"/>
                <Border Stroke="#FBD206" StrokeThickness="2" BackgroundColor="White" StrokeShape="RoundRectangle 8">
                    <Entry x:Name="txt_nova_senha"
                           Placeholder="Nova senha"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           HeightRequest="45"/>
                </Border>
            </StackLayout>

            <StackLayout Spacing="5">
                <Label Text="Confirmar Nova Senha" TextColor="Black" FontSize="14"/>
                <Border Stroke="#FBD206" StrokeThickness="2" BackgroundColor="White" StrokeShape="RoundRectangle 8">
                    <Entry x:Name="txt_confirmar_senha"
                           Placeholder="Nova senha"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           HeightRequest="45"/>
                </Border>
            </StackLayout>

            <Button x:Name="btn_alterar"
                    Text="Alterar"
                    BackgroundColor="#FBD206"
                    TextColor="Black"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"
                    Margin="0,10,0,0"
                    Clicked="OnAlterarClicked"/>

            <Button Text="Voltar"
                    BackgroundColor="#FBD206"
                    TextColor="Black"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"
                    Clicked="OnVoltarClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
