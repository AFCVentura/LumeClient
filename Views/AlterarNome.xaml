<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LumeClient.Views.AlterarNome"
             Title="AlterarNome">

    <Grid RowDefinitions="Auto,*,Auto" BackgroundColor="White">
        <VerticalStackLayout Padding="20" Spacing="25">

            <StackLayout Grid.Row="0" Padding="15">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                    <Image Source="lume_branco.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Alterar Nome de Usuário"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                </StackLayout>
            </StackLayout>

            <Border Stroke="#FBD206" StrokeThickness="2" BackgroundColor="White" StrokeShape="RoundRectangle 8">
                <Entry x:Name="txt_nome"
                           Placeholder="Novo nome de usuário"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           HeightRequest="50"/>
            </Border>

            <Button x:Name="btn_alterar"
                        Text="Alterar"
                        BackgroundColor="#FBD206"
                        TextColor="Black"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="10"
                        Clicked="OnAlterarClicked"/>

            <Button Text="Voltar"
                    BackgroundColor="#FBD206"
                    TextColor="Black"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"
                    Clicked="OnVoltarClicked"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>